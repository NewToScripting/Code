<Window x:Class="EventsModule.Dialogs.AddItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Inspire="clr-namespace:Inspire;assembly=Inspire"
    Title="AddItem" Height="177" Width="600" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Background="{StaticResource WindowBackgroundBrush}" >
    <Grid>
        <Label Height="28" Margin="40,20,40,0" Name="lblAddItem" FontSize="15" Foreground="White" VerticalAlignment="Top">Label</Label>
        <TextBox Margin="40,50,40,58" Name="tbItemName" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Height="38" Margin="5" Name="btnOk" Inspire:ButtonImage.Image="Resources\Images\Ok16.png" VerticalAlignment="Bottom" Click="btnOk_Click" Width="170">Ok</Button>
            <Button Height="38" HorizontalAlignment="Right" Margin="5" Name="btnCancel" Inspire:ButtonImage.Image="Resources\Images\Cancel16.png" VerticalAlignment="Bottom" Width="170" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
