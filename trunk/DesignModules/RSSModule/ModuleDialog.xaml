                            <Image Width="24" Height="24" Margin="3,0" Source="Resources\Images\feeds.ico" />
                            <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                        </StackPanel>
                    </ContentControl>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
