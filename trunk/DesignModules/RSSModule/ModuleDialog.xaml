            <Label Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" VerticalAlignment="Bottom" Height="28" HorizontalAlignment="Left" Name="label2" Foreground="{StaticResource Foreground}" Width="101">Title Font Family:</Label>
