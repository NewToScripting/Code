    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AddItem" Height="177" Width="547" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Background="{StaticResource WindowBackgroundBrush}" >
