        <Label HorizontalAlignment="Left" Margin="30,32,0,0" x:Name="lblImage" Width="52" Height="28" VerticalAlignment="Top" Content="Image:" Foreground="#FFFFFFFF"/>
        <TextBox Height="23" IsReadOnly="True" Margin="77,34,96,0" x:Name="tbUri" VerticalAlignment="Top" />
        <Button Height="23" HorizontalAlignment="Right" Margin="0,34,15,0" x:Name="btnBrowse" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click" Content="Button"/>
        <Button Height="32" Margin="0,0,119,12" x:Name="btnOk" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Click="btnOk_Click" Content="Ok" d:LayoutOverrides="HorizontalAlignment"/>
        <Button Height="32" HorizontalAlignment="Right" Margin="0,0,15,12" x:Name="btnCancel" VerticalAlignment="Bottom" Width="100" Click="btnCancel_Click" Content="Cancel"/>
    </Grid>
</Window>
