     mc:Ignorable="d">
    <UserControl.Resources>
        <CollectionViewSource
    Source="{Binding Source={x:Static Fonts.SystemFontFamilies}}"
    x:Key="myFonts"/>
        <CollectionViewSource
    Source="{Binding Source={x:Static Fonts.SystemFontFamilies}}"
    x:Key="myFonts2"/>
