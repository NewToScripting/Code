        <Button Height="35" HorizontalAlignment="Right" Margin="0,17,12,0" Name="btnAddButton" VerticalAlignment="Top" Width="128" Command="{x:Static Commands:RSSModuleCommands.AddRSSFeedCommand}" >Add</Button>
