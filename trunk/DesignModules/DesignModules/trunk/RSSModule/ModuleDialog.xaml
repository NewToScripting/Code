        <ContextMenu x:Key="RSSFeedContext" Background="Black">
            <MenuItem Header="Remove RSS Feed" Click="DeleteRSSFeed" Background="Black">
                <MenuItem.Icon>
                    <Image Source="Resources/Images/Remove.png"
