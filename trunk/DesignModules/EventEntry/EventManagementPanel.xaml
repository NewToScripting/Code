                <Controls:DataGridTextColumn Binding="{Binding HotelName, Mode=OneWay}" Header="RoomID" Visibility="Collapsed"/>
                <Controls:DataGridTextColumn Binding="{Binding GroupName, Mode=OneWay}" Width="40*" Header="Group Name" />
