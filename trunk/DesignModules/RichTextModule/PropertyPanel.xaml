    <Border Margin="0,0,-15,0" Background="{StaticResource SunkenBackground}" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" x:Name="PART_sliderGrid" Width="260">
        <Border.RenderTransform>
            <TransformGroup>
