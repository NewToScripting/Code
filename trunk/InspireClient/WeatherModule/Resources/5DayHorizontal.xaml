                                <TextBlock.Effect>
                                    <DropShadowEffect/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </DockPanel>
                <DockPanel Margin="20,20,20,20">
                    <StackPanel>
                        <TextBlock TextAlignment="Center" FontSize="50" Foreground="White" Text="{Binding Path=WeatherReport.Forecast[4].StartTime.DayOfWeek}">
                                <TextBlock.Effect>
                                    <DropShadowEffect/>
