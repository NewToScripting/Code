                                <TextBlock.Effect>
                                    <DropShadowEffect/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Margin="10,-30,10,10" Grid.Column="1" Text="{Binding Path=WeatherReport.Forecast[4].HighTemperatureString}" Foreground="White" FontSize="70" >
                                <TextBlock.Effect>
                                    <DropShadowEffect/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </Viewbox>
    </DataTemplate>
</ResourceDictionary>