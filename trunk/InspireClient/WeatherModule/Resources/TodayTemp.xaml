<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:WeatherModule">
    <DataTemplate DataType="{x:Type local:WeatherControl}">
        <Viewbox>
                    <TextBlock Margin="0,-90,0,0" FontSize="300" Foreground="White" Text="{Binding WeatherReport.LatestWeather.TemperatureString, Mode=OneWay}">
                <TextBlock.Effect>
                    <DropShadowEffect />
                </TextBlock.Effect>
                    </TextBlock>
        </Viewbox>
    </DataTemplate>
</ResourceDictionary>