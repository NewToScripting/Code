<UserControl x:Class="Inspire.AnimationLibrary.LoadAnimationPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <ComboBox x:Name="cbLoadAnimation" HorizontalAlignment="Stretch">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Key}"  />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Border BorderBrush="Black" BorderThickness="1" Margin="8" VerticalAlignment="Top" HorizontalAlignment="Right" Height="5" Width="5">
            <Rectangle ToolTip="Clear Aniimation" Fill="White" MouseLeftButtonDown="ClearEffectClick" />
        </Border>
    </StackPanel>
</UserControl>
