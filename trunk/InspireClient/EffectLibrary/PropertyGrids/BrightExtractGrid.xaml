<UserControl x:Class="EffectLibrary.PropertyGrids.BrightExtractGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Right" Content="ThreshHold:" Margin="5" Grid.Row="0" Grid.Column="1"></Label>
        <Slider x:Name="threshold" Value="{Binding Threshold}" Minimum="0" Maximum="1" SmallChange=".1" Margin="5" Grid.Column="3"/>
    </Grid>
</UserControl>
