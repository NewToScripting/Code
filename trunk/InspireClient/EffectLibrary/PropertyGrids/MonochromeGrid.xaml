<UserControl x:Class="EffectLibrary.PropertyGrids.MonochromeGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Right" Margin="5" Text="Filter Color:" Grid.Row="0" Grid.Column="1"></TextBlock>
        <Border Grid.Column="2" HorizontalAlignment="Left" Margin="2" BorderThickness="1" BorderBrush="Black" Width="21" Height="21" Background="{DynamicResource CheckerBrush}">
            <Rectangle x:Name="TextColorRectangle" Width="20" Height="20" MouseDown="ChangeTextColor_Click" HorizontalAlignment="Left" Style="{x:Null}" />
        </Border>
    </Grid>
</UserControl>
