<Window x:Class="Inspire.Client.Activation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activation" Height="176" Width="539" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="{StaticResource WindowBackgroundBrush}" xmlns:my="clr-namespace:Inspire;assembly=Inspire">
    <Grid>
        <TextBlock Margin="10,22,11,89" Foreground="{StaticResource Foreground}">Enter your registration code to activate:</TextBlock>
        <TextBox x:Name="tbRegistrationCode" Margin="10,45,40,68" />
        <Image Source="Resources\Images\Cancel16.png" Width="16" Height="17" Margin="487,48,14,72" ToolTip="Clear" ButtonBase.Click="Image_Click" />
        <Button my:ButtonImage.Image="Resources\Images\Ok16.png" Content="Login" Height="35" IsDefault="True" Margin="263,0,146,12" Name="btnLogin" VerticalAlignment="Bottom" Click="btnLogin_Click" />
        <Button my:ButtonImage.Image="Resources\Images\Cancel16.png" Content="Cancel" Height="35" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnCancel" VerticalAlignment="Bottom" Width="128" Click="btnCancel_Click" />
    </Grid>
</Window>
