                   Foreground="#FFFFA609"
                   VerticalAlignment="Bottom"
                   Height="25" Visibility="Hidden" />
            <TextBlock Margin="81,0,74,83" Visibility="Visible"
                 Text="Processing Slide. Please wait..."
                 x:Name="txtDialogMessage"
                 VerticalAlignment="Bottom"
                 FontSize="16" TextAlignment="Center"
               	Foreground="White" FontWeight="Black"
                 TextWrapping="Wrap">
                <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="6"
                              Color="DarkTurquoise"
                              Opacity="1"
                              ShadowDepth="-2"
                              Direction="455" />
                    </TextBlock.Effect>
            </TextBlock>
            <DockPanel Height="25"
                 VerticalAlignment="Bottom"
                 Margin="10,0,12,25">
                <Button x:Name="btnCancel"
                Click="btnCancel_Click"
                Visibility="Collapsed"
                Content="Cancel"
                DockPanel.Dock="Right"
                Width="12"
                Margin="10,0,0,0"
                HorizontalAlignment="Right" />
                <TextBlock x:Name="lblStatus" FontSize="18" TextAlignment="Center"
               Foreground="White"
