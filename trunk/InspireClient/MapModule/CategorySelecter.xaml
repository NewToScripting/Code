            <TextBlock FontSize="20" Foreground="{DynamicResource Foreground}" Height="36" HorizontalAlignment="Left" Margin="16,40,0,0" Text="Standard Categories" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" />
